# Production Environment Configuration
# Copy this file to .env.production and fill in with actual values
# NEVER commit .env.production to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Generate strong passwords using: openssl rand -base64 32

POSTGRES_USER=wecanacademy_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_RANDOM_PASSWORD
POSTGRES_DB=wecanacademy_production

# Database URLs
# Replace <PASSWORD> with POSTGRES_PASSWORD value
DATABASE_URL=postgresql://wecanacademy_prod:YOUR_PASSWORD_HERE@pgbouncer:5432/wecanacademy_production?schema=public&pgbouncer=true
DIRECT_DATABASE_URL=postgresql://wecanacademy_prod:YOUR_PASSWORD_HERE@postgres:5432/wecanacademy_production?schema=public

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_RANDOM_PASSWORD

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
NEXTAUTH_SECRET=CHANGE_THIS_TO_RANDOM_64_CHARACTER_STRING
NEXTAUTH_URL=https://your-domain.com
AUTH_TRUST_HOST=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
